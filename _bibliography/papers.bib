  copyright = {American Physical Society},
  langid = {english},
  pdf = {liu\_magnetic\_2021.pdf},
  supp = {EIO\_WSM\_SM.pdf}
}

@article{pixley_rare_2021,
  title = {Rare Regions and Avoided Quantum Criticality in Disordered {{Weyl}} Semimetals and Superconductors},
  author = {Pixley, J.H. and Wilson, Justin H.},
  year = {2021},
  month = dec,
  journal = {Ann. Phys. (N. Y.)},
  volume = {435},
  eprint = {2102.02822},
