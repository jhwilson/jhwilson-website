@article{liu_magnetic_2021,
  title = {Magnetic {{Weyl Semimetallic Phase}} in {{Thin Films}} of {{Eu2Ir2O7}}},
  author = {Liu, Xiaoran and Fang, Shiang and Fu, Yixing and Ge, Wenbo and Kareev, Mikhail and Kim, Jong-Woo and Choi, Yongseong and Karapetrova, Evguenia and Zhang, Qinghua and Gu, Lin and Choi, Eun-Sang and Wen, Fangdi and Wilson, Justin H. and Fabbris, Gilberto and Ryan, Philip J. and Freeland, John W. and Haskel, Daniel and Wu, Weida and Pixley, J. H. and Chakhalian, Jak},
