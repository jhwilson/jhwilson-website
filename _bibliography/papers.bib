@article{zabalo_operator_2022,
  title = {Operator {{Scaling Dimensions}} and {{Multifractality}} at {{Measurement-Induced Transitions}}},
  author = {Zabalo, A. and Gullans, M. J. and Wilson, J. H. and Vasseur, R. and Ludwig, A. W. W. and Gopalakrishnan, S. and Huse, David A. and Pixley, J. H.},
